<Window x:Class="BattleShip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleShip"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="BattleShip" Height="400" Width="600">
    <Window.Background>
        <ImageBrush ImageSource="/Resources/Images/bg_battleship.jpg"/>
    </Window.Background>
    <Grid >
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Button Content="Play"  Margin="200,80,200,0" Width="100" Height="35"/>
            <Button Content="Network" Margin="200,0,200,0" Width="100" Height="35"/>
            <Button Content="About" Margin="200,0,200,0" Width="100" Height="35"/>
            <Button Content="Exit" Margin="200,0,200,0" Width="100" Height="35"/>
        </StackPanel>
    </Grid>
</Window>
